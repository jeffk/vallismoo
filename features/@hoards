if (!$rpg:trusted(player))  return("You don't have permission to do that.");endifif (length(args) == 0)  amount = 3;else  amount = tonum(args[1]);endifif (typeof(amount) != NUM)  return("Invalid argument.  To set number of matches type: @hoards 4");endifplayer:tell("Beginning search for player hoards.");line = {"Container                     Owner               Number of items"};line = {@line, "-----------------------------------------------------------------"};for cont in ($object_utils:leaves($container))  $command_utils:suspend_if_needed(1);  if ($object_utils:isa(cont.owner,$player))    counter = 0;    for obj in (cont.contents)      if (obj.owner != cont.owner)        counter = counter + 1;      endif    endfor    if (counter >= amount)      contnumber = tostr("(",cont,")");      len = 29 - length(contnumber);      contname = #9016:left(cont.name,len);      ownnumber = tostr("(",cont.owner,")");      len = 19 - length(ownnumber);      ownname = #9016:left(cont.owner.name,len);      line = {@line,tostr(contname,contnumber," ",ownname, " ",ownnumber,"      ",counter)};    endif  endifendforfor ln in (line)  player:tell(ln);  $command_utils:suspend_if_needed(1);endforplayer:tell("Done.");